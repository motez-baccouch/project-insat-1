<h2>Semestre {{ semestre }}</h2>

<table class="table">
    <thead>
    <tr>
        <th>Mati√®re</th>
        <th>Coefficient</th>
        <th>DS</th>
        <th>TP</th>
        <th>Examen</th>
    </tr>
    </thead>
    <tbody>
    {% set notCheck = true %}

    {% for note in notes %}
        <tr>
            <td>{{ note.matiere.matiere.nom }}</td>
            <td>{{ note.matiere.coefficient }}</td>
            <td>
                {% if (notCheck or note.dsValid) %}
                    {{ note.noteDS }}
                {% endif %}
            </td>
            <td>
                {% if(notCheck or note.tpValid) %}
                    {{ note.noteTp }}
                {% endif %}
            </td>
            <td>
                {% if (notCheck or note.examenValid) %}
                    {{ note.noteExamen }}
                {% endif %}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
