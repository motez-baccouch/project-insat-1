{% extends 'base.html.twig' %}

{% block body %}

    <div class="accordion" id="accordionExample">
        {% for semestre in range(1,2) %}
        <div class="accordion-item">
            <h2 class="accordion-header" id="heading{{ semestre }}">
                <button class="accordion-button "
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#collapse{{ semestre }}"
                        aria-expanded="false"
                        aria-controls="collapse{{ semestre }}">
                    Semester {{ " " ~ semestre }}
                </button>
            </h2>
            <div id="collapse{{ semestre }}" class="accordion-collapse collapse {% if semestre == 1 %}show{% endif %}"
                 aria-labelledby="heading{{ semestre }}" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <div class="accordion" id="accordionExample2">
                    {% for fil,niveau in filieres %}
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingOne">
                                <button class="accordion-button collapsed"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#collapse{{ fil }}{{ semestre }}"
                                        aria-expanded="true"
                                        aria-controls="collapse{{ fil }}{{ semestre }}">
                                    {{ fil }}
                                </button>
                            </h2>
                            <div id="collapse{{ fil }}{{ semestre }}"
                                 class="accordion-collapse collapse "
                                 aria-labelledby="heading{{ semestre }}"
                                 data-bs-parent="#accordionExample2">
                                <div class="accordion-body">
                                    {% for key,niv in niveau %}
                                    <div class="list-group">
                                       <a href="{{ path('matiere',{'semester': semestre , 'filiere':fil , 'niveau':niv }) }}"
                                          class="list-group-item list-group-item-action">{{ fil }} {{ niv }}</a>
                                    </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}
